<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <TableRow>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- TEMA 1 -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tema1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile"
                    app:border_color="#FF000000"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/nombreTema1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Tema 1\nMireia"
                    android:gravity="center"
                    android:layout_below="@+id/tema1"
                    android:textSize="16sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/process1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0/12"
                        android:layout_marginRight="5dp"
                        android:textSize="15sp"
                        />

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="20dp"
                        android:minWidth="80dp"/>

                </LinearLayout>


                <!-- TEMA 3 -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tema3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile"
                    app:border_color="#FF000000"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/nombreTema3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Tema 3"
                    android:layout_below="@+id/tema3"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_span="1">

                <!-- TEMA 2 -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tema2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/profile"
                    app:border_color="#FF000000"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/nombreTema2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Tema 2"
                    android:layout_below="@+id/tema2"
                    android:textSize="16sp"/>


            </LinearLayout>

        </TableRow>
    </TableLayout>

</RelativeLayout>